<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PushApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/disable_backup"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EveryPush"
        tools:targetApi="tiramisu">

        <activity
            android:name=".ui.MainActivity"
            android:enableOnBackInvokedCallback="true"
            android:exported="true"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:host="moe.peanutmelonseedbigalmond.push"
                    android:scheme="app" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.FCMMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".service.DownloadNotificationImageJobService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name=".receiver.NotificationDismissBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="moe.peanutmelonseedbigalmond.push.action.NOTIFICATION_DELETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>